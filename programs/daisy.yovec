// Determine which axis a vector should be routed to.

import vx, vy, vz

let number X = abs $vx
let number Y = abs $vy
let number Z = abs $vz

let vector MAG = [
    (X >= Y) and (X >= Z),
    (Y > X) and (Y >= Z),
    (Z > X) and (Z > Y)
]

let vector SIGN = [
    -1 ^ ($vx < 0),
    -1 ^ ($vy < 0),
    -1 ^ ($vz < 0)
]

let vector AXIS = apply * MAG SIGN

export AXIS
